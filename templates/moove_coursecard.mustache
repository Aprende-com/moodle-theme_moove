<div class="card dashboard-card" role="listitem" data-region="course-content" data-course-id="{{{id}}}">
    <a href="{{config.wwwroot}}/course/view.php?id={{{id}}}" tabindex="-1">
        <div class="card-img dashboard-card-img" style="background-image: url({{{image}}});">
            <span class="sr-only">{{#str}}aria:courseimage, core_course{{/str}} {{{fullname}}}</span>
            <div class="course-category">
                {{{category}}}
            </div>
            {{#hascontacts}}
                <div class="course-contacts">
                    {{#contacts}}
                        <a href="{{config.wwwroot}}/user/profile.php?id={{{id}}}" class="contact" data-toggle="tooltip" title="{{{fullname}}}">
                            <img src="{{{userpicture}}}" class="rounded-circle" alt="{{{fullname}}}">
                        </a>
                    {{/contacts}}
                </div>
            {{/hascontacts}}
        </div>
    </a>
    <div class="card-body pr-1 course-info-container">
        <div class="d-flex align-items-start">
            <div class="w-100 text-truncate">
                <a href="{{config.wwwroot}}/course/view.php?id={{{id}}}" class="aalink coursename mr-2 mb-1">
                    <span class="sr-only">{{{fullname}}}</span>
                    <span class="multiline">{{{fullname}}}</span>
                </a>
            </div>
        </div>
    </div>
    <div class="d-flex align-items-start">
        <div class="card-footer dashboard-card-footer border-0 bg-white w-100">
            <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="50" style="width: 50%" aria-valuemin="0" aria-valuemax="50"></div>
            </div>
            <p class="mb-0">50% completo</p>
        </div>
    </div>
</div>